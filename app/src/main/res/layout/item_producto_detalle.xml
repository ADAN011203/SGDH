<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/textViewProductoNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewCantidad"
            android:layout_marginEnd="8dp"
            tools:text="Paracetamol 500mg" />

        <!-- Clave del Producto -->
        <TextView
            android:id="@+id/textViewProductoClave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            app:layout_constraintTop_toBottomOf="@id/textViewProductoNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewCantidad"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text="Clave: MED-001" />

        <!-- PresentaciÃ³n -->
        <TextView
            android:id="@+id/textViewProductoPresentacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            app:layout_constraintTop_toBottomOf="@id/textViewProductoClave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewCantidad"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            tools:text="Caja c/20 tabletas" />

        <!-- Cantidad Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/brand"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:text="x5" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>